<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.Act_NyTimes">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_nyTimes_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <tliknowledge.sunil_technology_assessment.custom.RotateLoading
        android:id="@+id/rotateloading"
        android:layout_width="80dp"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/sun_25"
        android:paddingTop="@dimen/sun_55"
        android:paddingBottom="@dimen/sun_55"
        android:paddingRight="@dimen/sun_25"
        android:layout_height="80dp"
        android:background="@drawable/rect_loading_bg"
        app:loading_color="@color/clr_loading_surface"
        app:loading_speed="9"
        app:loading_width="4dp" />
</RelativeLayout>